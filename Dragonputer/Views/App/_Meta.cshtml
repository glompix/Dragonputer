
<fieldset class="cs-section cs-meta">
    <div class="cs-section-header">
        <div ng-hide="$editName">
            <a class="cs-section-control" ng-init="$editName = false" ng-click="$editName = true; $('.cs-status')"><i class="fa fa-edit"></i></a>
            <h3 class="cs-section-label">{{ c.data.name }}</h3>
        </div>
        <div ng-show="$editName">
            <button class="cs-meta-name-button" ng-click="$editName = false">OK</button>
            <input class="cs-meta-name-value" type="text" ng-model="c.data.name" />
        </div>
    </div>
    <div class="cs-field-block">
        <label class="cs-meta-xp-label">XP</label>
        <input class="cs-meta-xp-value" type="tel" ng-model="c.data.experience" />
        <span class="cs-meta-level-label">Level</span>
        <span class="cs-meta-level-value">{{ c.calc.level() }}</span>
    </div>
    <div class="cs-field-block">
        <label class="cs-meta-label">Race</label>
        <input class="cs-meta-value" type="text" ng-model="c.data.race" />
    </div>
    <div class="cs-field-block">
        <label class="cs-meta-label">Class</label>
        <input class="cs-meta-value" type="text" ng-model="c.data.class" />
    </div>
    <div class="cs-field-block">
        <label class="cs-meta-label">Diety</label>
        <input class="cs-meta-value" type="text" ng-model="c.data.diety" />
    </div>


    <div class="cs-field-block">
        <label class="cs-meta-label">Paragon Path</label>
        <input class="cs-meta-value" type="text" ng-model="c.data.paragonPath" />
    </div>

    <div class="cs-field-block">
        <label class="cs-meta-label">Epic Destiny</label>
        <input class="cs-meta-value" type="text" ng-model="c.data.epicDestiny" />
    </div>

    <div class="cs-field-block">
        <img class="cs-character-picture" onclick="$('#PictureFileInput').trigger('click');" ng-show="c.data.picture" ng-src="{{ c.data.picture }}" />
        <div class="cs-character-picture no-content" onclick="$('#PictureFileInput').trigger('click');" ng-hide="c.data.picture">
            <i class="fa fa-lg fa-user"></i>
            <p>Set Picture</p>
        </div> 
        <input type="file" class="hidden-file-input" id="PictureFileInput" cs-file-model="c.data.picture" />
    </div>
    <div class="cs-field-block">
        <div class="btn-group btn-group-justified" ng-show="c.data.background">
            <a class="btn btn-default" onclick="$('#BackgroundFileInput').trigger('click');">Change Background</a>
            <a href="" class="btn btn-default" ng-click="c.data.background = null">Remove Background</a>
        </div>
        <div class="btn-group btn-group-justified" ng-hide="c.data.background">
            <a class="btn btn-default" onclick="$('#BackgroundFileInput').trigger('click');">Set Background</a>    
        </div>
        <input type="file" class="hidden-file-input" id="BackgroundFileInput" cs-file-model="c.data.background" />
    </div>

    <div class="cs-field-block">
        <button ng-click="delete()" ng-disabled="!canDelete()" class="cs-delete-button">Delete {{ c.data.name }}</button>
    </div>
</fieldset>