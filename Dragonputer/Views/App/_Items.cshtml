<div class="cs-section cs-items">
    <div class="cs-section-header">
        <a class="cs-section-control" ng-init="$newMagicItemForm = { show: false, name: '' }" ng-click="$newMagicItemForm.show = true"><i class="fa fa-plus"></i></a>
        <h3 class="cs-section-label">Magic Items</h3>
    </div>
    <ul class="cs-list">
        <li class="cs-list-new-form" ng-show="$newMagicItemForm.show">
            <button class="cs-list-new-button" ng-click="c.addItem({ name: $newMagicItemForm.name, type: 'magic', used: false }); $newMagicItemForm.name = ''; $newMagicItemForm.show = false;">Add</button>
            <input class="cs-list-new-value" type="text" ng-model="$newMagicItemForm.name" />
        </li>
        <li class="cs-list-item" ng-repeat="item in c.data.items | filter: { type: 'magic' }">
            <div class="cs-list-item-head">
                <a class="cs-list-item-name">{{ item.name }}</a>
            </div>
            <div class="cs-list-item-body">
                <a class="cs-list-item-remove" ng-click="c.removeItem(item)"><i class="fa fa-trash-o"></i></a>
                <textarea ng-model="item.description" placeholder="description..."></textarea>
            </div>
        </li>
    </ul>

    <div class="cs-section-header">
        <a class="cs-section-control" ng-init="$newEquipmentForm = { show: false, name: '' }" ng-click="$newEquipmentForm.show = true"><i class="fa fa-plus"></i></a>
