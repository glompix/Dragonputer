<fieldset class="cs-section cs-status" data-initial-section="true">
    <div class="cs-section-header">
        <h3 class="cs-section-label">Hit Points</h3>
    </div>
    <div class="cs-field-block">
        <span class="cs-status-current">Current</span>
        <input class="cs-current-hp-value" type="tel" ng-class="{ 'danger': c.isBloodied() }" ng-model="c.data.hitpoints.current" />
        <label class="cs-current-hp-label">HP</label>
        <input class="cs-temp-hp-value" type="tel" ng-model="c.data.hitpoints.temp" />
        <label class="cs-temp-hp-label">Temp</label>
    </div>
    <div class="cs-header-block">
        <span class="cs-max-hp-label">Max HP</span>
        <span class="cs-bloodied-hp-label">Bloodied</span>
        <span class="cs-surges-day-label">Surges/day</span>
        <span class="cs-surge-hp-label">HP Value</span>
    </div>
    <div class="cs-field-block">
        <input class="cs-max-hp-value" type="tel" ng-model="c.data.hitpoints.max" />
        <span class="cs-bloodied-hp-value">{{ c.calc.hitpoints.bloodied() }}</span>
        <input class="cs-surges-day-value" type="tel" ng-model="c.data.surges.perDay" />
        <span class="cs-surge-hp-value">{{ c.calc.surges.hpValue() }}</span>
    </div>
    <cs-list-editor title="Status Effects" source="c.data.statusEffects">
        <li class="cs-list-item" ng-repeat="item in c.data.statusEffects">
            <a href="" class="cs-list-item-remove" ng-click="removeFrom(c.data.statusEffects, item)"><i class="fa fa-trash-o"></i></a>
            <div ng-include="'@Url.Content("~/Scripts/app/templates/cs-basic-editor.html")'"></div>
        </li>
    </cs-list-editor>
    <div class="cs-section-header">
        <h3 class="cs-section-label">Action Points</h3>
    </div>
</fieldset>